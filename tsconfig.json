{
    "compilerOptions": {
      "module": "commonjs",
      "target": "es6",
      "rootDir": "./",
      "outDir": "./dist",
      "sourceMap": true,
      "watch": true,
      "alwaysStrict": true,
      "allowJs": true,
      "esModuleInterop": true,
      "resolveJsonModule": true
    },
    "include":[ 
      "graphql/**/*",
      "helpers/**/*",
      "rest/**/*",
      "tests/**/*",
      "types/**/*",
      "./*"
    ],
    "exclude":[ 
        "node_modules"
    ]
}